{
	"include": [
		"src"
	],
    "exclude": [
        "src/**/*.spec.ts"
    ],
	"compileOnSave": false,
	"compilerOptions": {
		"outDir": "./dist",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"sourceMap": true,
		"module": "commonjs",
		"noImplicitAny": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictNullChecks": true,
		"target": "es5",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es5"
		]
	}
}